{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug gradio",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/gradio",
            "args": [ "${file}" ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}